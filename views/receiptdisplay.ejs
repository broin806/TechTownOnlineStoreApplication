<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Bootstrap added -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <title>Receipt Information</title>
</head>
<body class="bg-light">

    <div class="container py-5">

        <div class="d-flex justify-content-between align-items-center mb-3">
            <h1 class="h3 mb-0">Receipt Summary:</h1>
            <a class="btn btn-outline-secondary btn-sm" href="/">Back</a>
        </div>

        <div class="card shadow-sm">
            <div class="card-body">

                <% if (receipts && receipts.length > 0) { %>

                    <div class="table-responsive">
                        <table class="table table-striped table-bordered align-middle">
                            <thead class="table-dark">
                                <tr>
                                    <th>Name</th>
                                    <th>Address</th>
                                    <th>City</th>
                                    <th>Province</th>
                                    <th>Phone</th>
                                    <th>Email</th>
                                    <th>Items purchased</th>
                                    <th>Tax</th>
                                    <th>Total Amount (with Tax)</th>
                                </tr>
                            </thead>
                            <tbody>
                                <!-- Displays receipt and iterates -->
                                <% receipts.forEach(receipt => { %>
                                    <tr>
                                        <td><%= receipt.name %></td>
                                        <td><%= receipt.address %></td>
                                        <td><%= receipt.city %></td>
                                        <td><%= receipt.province %></td>
                                        <td><%= receipt.phone %></td>
                                        <td><%= receipt.email %></td>
                                        <td>
                                            <%= Array.isArray(receipt.selectedItems) 
                                                ? receipt.selectedItems.join(" , ") 
                                                : receipt.selectedItems %>
                                        </td>
                                        <td>$<%= Number(receipt.taxTotal).toFixed(2) %></td>
                                        <td><strong>$<%= Number(receipt.total).toFixed(2) %></strong></td>
                                    </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>

                <% } %>

            </div>
        </div>

    </div>

    <!-- Bootstrap JS added -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>